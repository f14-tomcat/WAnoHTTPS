
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

@model RegisterViewModel
<div class="card-body">
    <h3 class="card-title">ثبت نام</h3>
    <form asp-action="RegisterConfirm" asp-controller="Account">
        <div class="form-group">
            <label>آدرس ایمیل</label>
            <input asp-for="emailaddress_viewmodel" type="email" class="form-control" placeholder="ایمیل خودتان را وارد کنید">
            <span style="color:blueviolet" asp-validation-for="emailaddress_viewmodel"></span>
        </div>
        <div class="form-group">
            <label>رمز عبور</label>
            <input asp-for="password_viewmodel" type="password" class="form-control" placeholder="رمز عبوری را انتخاب و وارد کنید">
        </div>
        <div class="form-group">
            <label>تکرار رمز عبور</label>
            <input asp-for="repassword_viewmodel" type="password" class="form-control" placeholder="رمز عبور انتخابی را دوباره وارد کنید">
            <span style="color:blueviolet" asp-validation-for="repassword_viewmodel"></span>
        </div>
        <div class="form-group">
            <label>نام</label>
            <input asp-for="firstname_viewmodel" type="text" class="form-control" placeholder="نام خود را وارد کنید">
            <span style="color:blueviolet" asp-validation-for="firstname_viewmodel"></span>
        </div>
        <div class="form-group">
            <label>نام خانوادگی</label>
            <input asp-for="lastname_viewmodel" type="text" class="form-control" placeholder="نام خانوادگی خود را وارد کنید">
        </div>
        <button type="submit" class="btn btn-primary mt-4">ثبت نام</button>
    </form>
</div>