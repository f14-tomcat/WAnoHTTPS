
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@model LoginViewModel

<div class="card-body">
    <h3 class="card-title">ورود</h3>
    <form asp-action="LoginConfirm" asp-controller="Account">
        <div class="form-group">
            <label>آدرس ایمیل</label>
            <input asp-for="email_as_username_viewmodel" type="email" class="form-control" placeholder="ایمیل را وارد کنید">
        </div>
        <div class="form-group">
            <label>رمز عبور</label>
            <input asp-for="password_viewmodel" type="password" class="form-control" placeholder="رمز عبور را وارد کنید">
        </div>
        <div class="form-group">
            <div class="form-check">
                <span class="form-check-input">
                    <input asp-for="rememberme_viewmodel" class="input-check__input" type="checkbox" id="login-remember">
                </span>
                <label class="form-check-label" for="login-remember">به خاطر سپاری</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">ورود</button>
    </form>
</div>
